.content
    size 100% auto
    padding 28px 0
    background-color light_gray

    &_center
        size 1200px 100%
        margin 0 auto
        +below(1220px)
            width 100%

.product
    size 279px 245px
    background-color #fff
    padding-bottom: 35px
    position: relative
    display: block
    vertical-align: top
    text-align: center
    border-radius 3px
    margin 0 28px 20px 0
    float left
    text-decoration: none
    +below(1220px)
        display: inline-block
        margin 0 8px 20px
        float none

    &:nth-child(4n+4)
        margin-right: 0
        +below(1220px)
            margin-right: 8px

    &:hover
        shadow()

    &__icon-wrap
        height 190px

    &__icon
        margin-top: 50px

    &__name
        font 14px PantonBold
        color light_blue
        text-transform: uppercase

    &:hover &__name
        color orange

    &__txt
        font 12px PantonRegular
        color gray
        margin-top: 8px

.portfolio-item
    size 279px auto
    position: relative
    z-index 4
    text-decoration: none
    display: inline-block
    vertical-align: top
    text-align: center
    border-radius 3px
    margin 0 28px 28px -5px
    +below(1220px)
        margin 0 10px 20px
    &:nth-child(4n+1)
        margin-left: 0
        +below(1220px)
            margin-left: 10px
    &:nth-child(4n+4)
        margin-right: 0
        +below(1220px)
            margin-right: 10px
    &__name
        font 14px PantonBold
        color light_blue
        text-transform: uppercase
        margin-top: 10px
    &__icon
        size 263px 269px
        border-img()
    &:hover &__name
        color orange
    &__txt
        font 12px PantonRegular
        color gray
        margin-top: 8px
    &__hover, &__hover-detail
        size 263px 269px
        position: absolute
        top 8px
        left 8px
        z-index 5
        background-color rgba(0,0,0,.5)
        display: none
    &__hover-detail
        text-decoration: none
        background-image url(../images/watch_icon.png)
        background-repeat no-repeat
        background-position center
    &:hover &__hover
        display: block
    &:hover &__hover-detail
        display: block

.review
    size 279px 383px
    background-color #fff
    border-radius 3px
    text-align: center
    padding 25px 0
    position: relative

    &__name
        font 16px PantonBold
        color dark_blue

    &__photo
        margin 10px 0
        size 97px 101px
        border-img-review()

    &__post
        font 12px PantonRegular
        color gray
        margin-bottom: 20px

    &__txt
        font 14px PantonRegular
        color dark_blue
        margin 0 17px
        text-align left

        &_before_quote
            display: inline-block
            size 14px 10px
            background-image url(../images/quotes.png)
            background-repeat no-repeat
            background-position top
            margin-right: 9px

        &_after_quote
            display: inline-block
            size 14px 10px
            background-image url(../images/quotes.png)
            background-repeat no-repeat
            background-position bottom
            margin-left 9px

    &__link-wrap
        text-align left
        margin-left: 17px
        position: absolute
        bottom 25px

    &__link-icon
        margin-right: 9px
        vertical-align: top

    &__link
        font 14px PantonBold
        color light_blue
        text-decoration: none
        &:hover
            color orange

.new
    display: inline-block
    vertical-align: top
    text-decoration: none
    size 279px auto
    position: relative
    z-index 4

    &__hover
        size 263px 269px
        position: absolute
        top 8px
        left 8px
        z-index 5
        background-color rgba(0,0,0,.5)
        display: none

    &:hover &__hover
        display: block

    &__img
        display: inline-block
        size 263px 269px
        border-img()

    &__date
        font 12px PantonRegular
        color gray
        margin 10px 0 20px 0

    &__txt
        font 14px PantonBold
        color light_blue

    &:hover &__txt
        color gray

    &__sep
        size 100% 1px
        background-color #e7e7e9
        margin-top: 20px

.title-big
    font 24px PantonBlack
    line-height 24px
    color dark_blue
    text-transform: uppercase

.title-mid
    font 18px PantonBlack
    color dark_blue
    text-transform: uppercase

.title-small
    font 14px PantonBold
    color dark_blue

.checkbox
    display block

    input[type=checkbox]
        display: none

    label
        display inline-block
        cursor pointer
        position: relative
        padding-left: 22px
        font 14px PantonRegular
        color dark_blue

    label:before
        content ""
        display: inline-block
        size 12px
        margin-right: 10px
        position: absolute
        left 0
        bottom 2px
        background-color #fff
        border 1px solid gray
        border-radius 3px

    input[type=checkbox]:checked + label
        //font 14px PantonBold
        color orange

    input[type=checkbox]:checked + label:before
        background-color #fff
        border 1px solid orange
        background-image url(../images/radio_checked.png)
        background-repeat no-repeat
        background-position center

.radio-fill-btn
    display: inline-block
    vertical-align: top

    input[type=radio]
        display: none

    label
        display: inline-block
        font 14px PantonBold
        color light_blue
        border 1px solid light_blue
        border-radius 3px
        outline none
        cursor pointer
        width 346px
        height 35px
        text-align: center
        line-height 35px
        text-transform: uppercase
        +below(400px)
            width 165px

    input[type=radio]:checked + label
        font 14px PantonBold
        color #fff
        background-color orange
        border 1px solid orange
        line-height 35px

.radio-btn
    display inline-block
    vertical-align: top

    input[type=radio]
        display: none

    label
        display: inline-block
        font 14px PantonRegular
        color gray
        border 1px solid gray
        border-radius 3px
        outline none
        cursor pointer

    input[type=radio]:checked + label
        //font 14px PantonBold
        color orange
        border 1px solid orange

.radio-color
    display inline-block
    vertical-align: top

    input[type=radio]
        display: none

    label
        size 37px 26px
        display: inline-block
        border 1px solid gray
        border-radius 3px
        outline none
        cursor pointer
        background-color #fff
        background-repeat no-repeat
        background-position center

    input[type=radio]:checked + label
        border 1px solid orange

.radio
    display block

    input[type=radio]
        display: none

    label
        display inline-block
        cursor pointer
        position: relative
        padding-left: 22px
        font 14px PantonRegular
        color dark_blue

    label:before
        content ""
        display: inline-block
        size 12px
        margin-right: 10px
        position: absolute
        left 0
        bottom 2px
        background-color #fff
        border 1px solid gray
        border-radius 3px

    input[type=radio]:checked + label
        color orange

    input[type=radio]:checked + label:before
        background-color #fff
        border 1px solid orange
        background-image url(../images/radio_checked.png)
        background-repeat no-repeat
        background-position center

.spinner
    size 116px 30px
    position: relative

    &__button
        position: absolute
        top 0
        size 28px
        background-color light_gray
        outline none
        cursor pointer
        border 1px solid #c6c7cc
        color gray

    &__dec
        left 0
        border-top-left-radius 3px
        border-bottom-left-radius 3px

    &__inc
        right 0
        border-top-right-radius 3px
        border-bottom-right-radius 3px

    &__input
        display: block
        text-align: center
        position: absolute
        top 0
        left 28px
        size 60px 24px
        outline none
        border none
        border-top 1px solid #c6c7cc
        border-bottom 1px solid #c6c7cc
        background-color #fff
        font 14px PantonBold
        color dark_gray

.orange-btn
    display block
    size 100% 42px
    font 14px PantonBold
    color #fff
    border-radius 3px
    background-color orange
    margin 0 auto
    border none
    outline none
    cursor pointer
    text-transform: uppercase

    &:hover
        background-color #ffa155

.more-btn
    display: block
    size 146px 42px
    font 14px PantonBold
    color light_blue
    border-radius 3px
    background-color #fff
    margin 0 auto
    border none
    outline none
    cursor pointer

    &:hover
        background-color orange
        color #fff

.done-btn
    display block
    size 100% 42px
    font 12px PantonBold
    color #c8c8c8
    border-radius 3px
    background-color transparent
    outline none
    cursor pointer
    text-transform: uppercase
    border 1px solid #c8c8c8

.cancel-btn
    display block
    size 100% 42px
    font 12px PantonBold
    color #fff
    border-radius 3px
    background-color #c8c8c8
    border none
    outline none
    cursor pointer
    text-transform: uppercase

.border-btn
    display block
    size 100% 42px
    font 12px PantonBold
    color orange
    border-radius 3px
    background-color transparent
    outline none
    cursor pointer
    text-transform: uppercase
    border 1px solid orange

.format
    size 240px auto
    background-color #fff
    margin-bottom: 40px
    margin-right: 65px
    float left
    +below(1220px)
        margin-right: 40px
    &:nth-child(4n+4)
        margin-right: 0
        +below(1220px)
            margin-right: 40px

    &__title
        font 14px PantonBold
        color light_blue
        text-transform: uppercase
        margin-bottom: 15px

    &__img
        width 239px!important
        display: block

    &__cost
        font 24px PantonBold
        color orange
        margin-top: 15px