.catalog

    &__title
        title()
        margin-top: 25px
        +below(1220px)
            margin-left: 10px

    &__item-wrap
        margin-bottom: 28px
        clearfix()
        +below(1220px)
            text-align: center
            margin-bottom: 20px

        a:last-child
            margin-right: 0
            +below(1220px)
                margin-right 8px

    /* BEGIN mixin catalog__item */
    &__item
        display: block
        size 239px 364px
        padding 20px
        background-color #fff
        border-radius 3px
        float left
        margin-right 28px
        text-decoration: none
        +below(1220px)
            float none
            display: inline-block
            margin 0 9px 20px
            text-align: left

        &:hover
            shadow()

    &__name
        font 14px PantonBold
        color light_blue
        text-transform: uppercase

        &:hover
            color orange

    &__img
        text-align: center
        margin 15px 0
        border-img-catalog()

    &__cost
        font 24px PantonBold
        line-height 24px
        color orange
        text-transform: uppercase

    &__count
        font 16px PantonRegular
        color dark_blue
        margin-top: 5px

    &__type
        font 14px PantonRegular
        color gray
        margin-top: 5px

    &__button
        width 145px!important
        margin-top: 15px!important
        margin-left: 0!important

    /* END mixin catalog__item */

    &__txt
        font 14px PantonRegular
        color dark_blue
        margin-bottom: 20px
        +below(1220px)
            margin-left: 10px
            margin-right: 10px

        &_bold
            font-weight bold