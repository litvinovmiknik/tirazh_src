.footer
    size 100% auto
    background-color light_blue
    padding 50px 0
    +below(1220px)
        padding-bottom: 0

    &_center
        size 1200px 100%
        margin 0 auto
        +below(1220px)
            width 100%

    &__item
        width 296px
        display inline-block
        vertical-align: top
        +below(1220px)
            margin-bottom: 40px
            margin-left: 10px
        +below(380px)
            width 90%

    &__item-3
        width 316px
        +below(380px)
            width 90%


    &__item-4
        width 276px
        +below(380px)
            width 90%

    &__logo
        display: block
        text-decoration: none

    &__logo-txt1
        font 46px PantonBold
        color #fff
        line-height 46px

    &__logo-txt2
        font 14px PantonBold
        color #fff

    &__address
        margin-top: 20px

    &__address-txt1
        font 14px PantonBold
        color #c6cad3

    &__address-txt2
        font 12px PantonRegular
        color #fff
        line-height 16px

    &__phone
        margin-top: 20px

    &__phone-txt1
        font 14px PantonBold
        color #c6cad3

    &__phone-txt2
        font 12px PantonRegular
        color #fff
        line-height 16px

        &_orange
            font-family PantonBold
            color orange
            margin-right: 5px

    &__timetable
        font 14px PantonBold
        color #fff
        text-transform: uppercase

    &__get-order
        margin-top: 20px

    &__get-order-txt1
        font 14px PantonBold
        color #c6cad3

    &__get-order-txt2
        font 12px PantonRegular
        color #fff
        line-height 16px

    &__set-order
        margin-top: 20px

    &__set-order-txt1
        font 14px PantonBold
        color #c6cad3

    &__set-order-txt2
        font 12px PantonRegular
        color #fff
        line-height 16px

    //&__subs

    &__subs-title
        font 14px PantonBold
        color #fff
        text-transform: uppercase

    &__subs-form
        position: relative
        size 260px 36px
        margin-top: 20px

    &__subs-input
        size 212px 36px
        padding-left: 12px
        background-color dark_blue
        font 14px PantonRegular
        color #fff
        border-top-left-radius 3px
        border-bottom-left-radius 3px
        border none
        outline none
        position: absolute
        top 0
        left 0

        &:focus::-webkit-input-placeholder
            color transparent
        &:focus::-moz-placeholder
            color transparent
        &:focus:-moz-placeholder
            color transparent
        &:focus:-ms-input-placeholder
            color transparent

    &__subs-button
        size 36px
        background-color orange
        border-top-right-radius 3px
        border-bottom-right-radius 3px
        border none
        outline none
        cursor pointer
        margin-bottom: -2px
        position: absolute
        top 0
        right 0

    &__subs-icon
        display: inline-block
        text-align: center
        vertical-align: middle

    &__pay
        margin-top: 30px

    &__pay-title
        font 14px PantonBold
        color #fff
        text-transform: uppercase

    &__pay-icons
        margin-top: 15px
        clearfix()

    &__pay-link
        float left
        text-decoration: none
        +below(380px)
            float none
            display: inline-block
            vertical-align: top

    &__pay-visa
        margin-top: 12px

    &__pay-mastercard
        margin-top: 7px

    &__pay-sberbank
        margin-top: 6px

    &__pay-icon
        vertical-align: top
        margin-right: 8px

    //&__soc

    &__soc-link
        text-decoration: none

    &__soc-icon
        margin-right: 5px

    &__note
        font 12px PantonRegular
        color #fff
        margin-top: 30px

    &__author
        font 12px PantonRegular
        color #c6cad3
        margin-top: 45px

    &__author-link
        text-decoration: none
        color orange
        margin-left: 5px

.copyright
    size 100% auto
    //min-height 46px
    background-color dark_blue

    &_center
        size 1200px 100%
        margin 0 auto
        +below(1220px)
            width 100%

    &__txt
        font 12px PantonRegular
        color gray
        padding 16px 0
        +below(1220px)
            margin-left: 10px