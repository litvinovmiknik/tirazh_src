.reg
    size 425px auto
    padding 30px
    background-color #fff
    margin 20px auto
    border-radius 3px
    box-sizing border-box
    +below(450px)
        width 100%
    &__title
        text-align: center
        margin-bottom: 20px
    &__radio-person1
        label
            size 173px 26px
            margin-bottom: 20px
            margin-right: 15px
            text-align: center
            padding-top: 3px
            box-sizing border-box
    &__radio-person2
        label
            size 173px 26px
            margin-bottom: 20px
            text-align: center
            padding-top: 3px
            box-sizing border-box
    &__checkbox-agree
        margin-bottom: 10px
        label:before
            top 2px
    &__checkbox-mail
        margin-bottom: 20px