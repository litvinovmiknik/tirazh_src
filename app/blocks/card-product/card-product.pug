                        span.card-product__pager-link_active
                        img.card-product__pager-img(src="assets/images/card-product/4_thumb.jpg")
            .card-product__right
                .card-product__cost
                    h3.card-product__cost-title стоимость
                    .card-product__cost-item
                        p.card-product__cost-value 2.00 р.
                        p.card-product__cost-desc за экземпляр
                    .card-product__cost-item
                        p.card-product__cost-value.card-product__cost-value_orange 200.00 р.
                        p.card-product__cost-desc сумма
                form.card-products__form(action="#" method="post" enctype="multipart/form-data")
                    .card-product__tabs.tabs_block
                        ul.card-product__tabs-head.tabs
                            li.card-product__tabs-head-item.active детали
                            li.card-product__tabs-head-item подробно
                        .card-product__tabs-box.box.visible
                            .card-product__side
                                +title-small('Сторона')
                                +radio-btn('side-one', 'side', 'Односторонние')(class="card-product__side-radio")
                                +radio-btn('side-two', 'side', 'Двухсторонние')(class="card-product__side-radio")
                            .card-product__edition
                                +title-small('Тираж')
                                +radio-btn('ed-100', 'edition', '100')(class="card-product__edition-radio")
