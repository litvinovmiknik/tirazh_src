.content
    .content_center
        .card-product
            +breadcrumbs(['Главная', 'Каталог', 'Визитки', 'Цифровая печать визиток'])
            h2.card-product__title цифровая печать визиток
            .card-product__left
                ul.card-product__slider
                    li.card-product__slider-item
                        a.card-product__slider-hover(data-fancybox="card-product" href="assets/images/card-product/1.jpg")
                        img.card-product__slider-img(src="assets/images/card-product/1.jpg")
                    li.card-product__slider-item
                        a.card-product__slider-hover(data-fancybox="card-product" href="assets/images/card-product/1.jpg")
