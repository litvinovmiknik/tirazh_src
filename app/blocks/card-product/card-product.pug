                                +radio-btn('ed-4000', 'edition', '4000')(class="card-product__edition-radio")
                            .card-product__paper
                                +title-small('Бумага')
                                .card-product__paper-radio-wrap
                                    +radio('paper1', 'paper', 'Мелованная бумага')(class="card-product__paper-radio")
