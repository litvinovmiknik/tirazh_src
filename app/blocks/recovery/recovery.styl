.recovery
    size 425px auto
    padding 30px
    background-color #fff
    margin 20px auto
    border-radius 3px
    box-sizing border-box
    +below(450px)
        width 100%
    &__title
        text-align: center
        margin-bottom: 20px
    &__txt
        font 14px PantonRegular
        color dark_blue
        margin-bottom: 20px
    &__captcha
        width 365px
        margin-bottom: 20px
        +below(450px)
            width 100%