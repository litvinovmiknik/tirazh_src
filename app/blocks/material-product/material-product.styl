.material-product
    size 100% auto
    background-color #fff
    padding 20px 0

    &_center
        size 1200px 100%
        margin 0 auto
        clearfix()
        +below(1220px)
            width 100%

    &__left
        size 580px auto
        float left
        margin-right: 20px
        +below(1220px)
            float none
            margin-left: 10px
            margin-right: 0
        +below(620px)
            width 100%
            padding 0 10px
            margin-left: 0
            box-sizing border-box

    &__right
        size 580px auto
        float left
        +below(1220px)
            float none
            margin-left: 10px
            margin-top: 30px
        +below(620px)
            width 100%
            padding 0 10px
            margin-left: 0
            box-sizing border-box

    &__txt1
        font 14px PantonRegular
        color dark_blue
        margin-top: 15px

    &__note
        font 14px PantonRegular
        color dark_blue
        margin-top: 15px

        &_bold
            font-family PantonBold

    &__list
        list-style decimal
        margin-left: 15px
        margin-top: 5px

    &__item
        font 14px PantonRegular
        color dark_blue
        line-height 24px

    &__prod-time-title
        margin-top: 30px

    &__txt2
        font 14px PantonRegular
        color dark_blue
        margin-top: 15px

    &__video
        margin-top: 20px
        +below(620px)
            width 100%