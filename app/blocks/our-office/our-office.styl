.our-office
    size 100% auto
    background-color light_gray
    padding 20px 0 30px

    &_center
        size 1200px 100%
        margin 0 auto
        position: relative
        +below(1220px)
            width 100%

    &__title
        +below(1220px)
            margin-left: 10px

    &__slider-item:hover &__slider-hover
        display: block

    &__slider-hover
        display: none
        text-decoration: none
        position: absolute
        top 8px
        left 8px
        size 263px 269px
        background-color rgba(0,0,0,.5)
        background-image url(../images/watch_icon.png)
        background-repeat no-repeat
        background-position center

    .bx-wrapper
        margin-top: 30px!important

    .bx-prev
        +below(1220px)
            right 31px!important

    .bx-next
        +below(1220px)
            right 10px!important