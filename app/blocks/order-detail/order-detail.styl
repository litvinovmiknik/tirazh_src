.order-detail
    clearfix()
    &__title
        margin 20px 0
        +below(1220px)
            margin-left: 10px
    &__left
        size 445px auto
        float left
        +below(1220px)
            float none
            padding-left: 10px
            box-sizing border-box
        +below(480px)
            width 100%
    &__right
        size 755px auto
        float left
        +below(1220px)
            float none
            margin-top: 30px
        +below(780px)
            width 100%
    &__status
        font 18px PantonBold
    &__status-name
        color dark_blue
    &__status-value
        color orange
        margin-left: 5px
    &__sum
        color dark_blue
        margin-top: 5px
    &__sum-name
        font 18px PantonBold
    &__sum-value
        font 24px PantonBold
        margin-left: 5px
    &__title-mid
        margin 30px 0 10px 0
    &__info
        color dark_blue
        margin-bottom: 5px
    &__info-name
        font 14px PantonBold
    &__info-value
        font 14px PantonRegular
        margin-left: 5px
    &__orange-btn
        display: inline-block!important
        width 163px!important
        height 36px!important
        margin-right: 10px!important
        margin-top: 30px!important
    &__cancel-btn
        display: inline-block!important
        width 103px!important
        height 36px!important
        margin-top: 30px!important
    &__table
        width 100%
        border-spacing 0 2px
    &__th
        width 100%
        padding 10px 0
        border-top-left-radius 3px
        border-top-right-radius 3px
        padding-left: 20px
    &__row
        background-color #fff
        &:nth-child(even)
            +below(620px)
                background-color lighten(gray, 80%)
    &__cell
        height 146px
        text-align: left
        padding-left: 20px
        box-sizing border-box
        +below(620px)
            height auto
            display: block
            font-size: 13px
            border: 0
            width: 100%
            padding 20px 10px
        &:first-child
            width 10%
            +below(620px)
                width 100%
        &:nth-child(2)
            width 60%
            +below(620px)
                width 100%
        &:nth-child(3)
            width 10%
            text-align: center
            font 18px PantonRegular
            color gray
            +below(620px)
                width 100%
                text-align left
        &:last-child
            width 20%
            text-align: center
            font 18px PantonBold
            color dark_blue
            +below(620px)
                width 100%
                text-align left
    &__product-name
        font 14px PantonBold
        color dark_blue
        text-transform: uppercase
    &__product-type
        font 14px PantonBold
        color gray
        margin 5px 0
    &__product-edition
        font 14px PantonRegular
        color gray
        &_bold
            font-family PantonBold
            margin-left: 5px
    &__product-material
        font 14px PantonRegular
        color gray
        &_bold
            font-family PantonBold
            margin-left: 5px